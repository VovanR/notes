{
  "private": true,
  "scripts": {
    "start": "http-server .",
    "test": "npm run test:js && npm run test:css && npm run test:spellcheck",
    "test:spellcheck": "yaspeller --dictionary ./dictionary.json ./*.md",
    "test:js": "xo",
    "test:css": "stylelint app/css/*.css"
  },
  "devDependencies": {
    "http-server": "^0.11.1",
    "stylelint": "^10.1.0",
    "stylelint-config-standard": "^18.3.0",
    "xo": "^0.24.0",
    "yaspeller": "^6.0.0"
  },
  "xo": {
    "semicolon": false,
    "envs": [
      "browser"
    ],
    "rules": {
      "import/extensions": 0
    }
  }
}
